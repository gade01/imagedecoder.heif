<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="imagedecoder.heif"
  version="1.0.3"
  name="HEIF image decoder"
  provider-name="spiff">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="kodi.imagedecoder"
    library_@PLATFORM@="@LIBRARY_FILENAME@"
    extension=".heif|.heic"
    mimetype="image/heif|image/heic"/>
  <extension point="xbmc.addon.metadata">
    <summary>libheif based image decoder</summary>
    <description>libheif based image decoder</description>
    <platform>@PLATFORM@</platform>
    <license>GPL-2.0</license>
    <source>https://github.com/xbmc/imagedecoder.heif</source>
  </extension>
</addon>
